<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unidad_fondo"
    android:orientation="vertical"
    tools:context=".Menu_Estudiante.Unidad.Unidad2.unidad_munidad2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/unidad_unidad2" />

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:text="Los ejercicios van de acuerdo al seguimiento de contenidos del libro de Lengua y Literatura."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:text="Indicaciones para las realizar las actividades: "
        android:textColor="#420202"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginVertical="3dp"
        android:text="* Tiene la seña de la respuesta en algunas opciones."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginVertical="3dp"
        android:text="* Recordar los temas vistos en la sección de contenidos."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginVertical="3dp"
        android:text="* Lea detenidamente el enunciado de color rojo, ejemplo: 1) Elija, escriba, seleccione, etc."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    <ImageView
        android:id="@+id/ImaUnidad2Gif"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/unida2_gif" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnUni2Lite1"
                android:layout_width="500dp"
                android:layout_height="60dp"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:background="@drawable/boton_color_morado"
                android:onClick="opcion_unidad2"
                android:text="Tradición afroecuatoriana"
                android:textAllCaps="false"
                android:textColor="@drawable/boton_menuprin_letras" />

            <Button
                android:id="@+id/btnUni2Lite2"
                android:layout_width="500dp"
                android:layout_height="60dp"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:background="@drawable/boton_color_morado"
                android:onClick="opcion_unidad2"
                android:text="Publicidad"
                android:textAllCaps="false"
                android:textColor="@drawable/boton_menuprin_letras" />

            <Button
                android:id="@+id/btnUni2Lite3"
                android:layout_width="500dp"
                android:layout_height="60dp"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:background="@drawable/boton_color_morado"
                android:onClick="opcion_unidad2"
                android:text="El ensayo"
                android:textAllCaps="false"
                android:textColor="@drawable/boton_menuprin_letras"/>

            <Button
                android:id="@+id/btnUni2Lite4"
                android:layout_width="500dp"
                android:layout_height="60dp"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:background="@drawable/boton_color_morado"
                android:onClick="opcion_unidad2"
                android:text="Complementos circunstanciales"
                android:textAllCaps="false"
                android:textColor="@drawable/boton_menuprin_letras" />

            <Button
                android:id="@+id/btnUni2Lite5"
                android:layout_width="500dp"
                android:layout_height="60dp"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:background="@drawable/boton_color_morado"
                android:onClick="opcion_unidad2"
                android:text="La conferencia"
                android:textAllCaps="false"
                android:textColor="@drawable/boton_menuprin_letras" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>