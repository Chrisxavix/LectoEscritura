                            android:layout_height="35dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/boton_glosario"
                            android:onClick="deporte_seleccionar"
                            android:src="@drawable/glosario_stop" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"/>

