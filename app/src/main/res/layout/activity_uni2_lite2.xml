                    android:id="@+id/rdnUni02L02Eje04_op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0A0A0A"
                    android:textSize="14sp"
                    android:text="Persuadir." />

                <RadioButton
                    android:id="@+id/rdnUni02L02Eje04_op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0A0A0A"
                    android:textSize="14sp"
                    android:text="Consumir." />

                <RadioButton
                    android:id="@+id/rdnUni02L02Eje04_op3"
