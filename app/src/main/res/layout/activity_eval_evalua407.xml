<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/evaluacion_fondo"
    android:orientation="vertical"
    tools:context=".Menu_Estudiante.Evaluacion.Evaluacion4.eval_evalua407">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/evaluacion_unidad4"/>

    <TextView
        android:id="@+id/textEval4_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#0A0A0A"
        android:text="Usuario:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <loic.teillard.colortextview.ColorTextView
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clt_color1="#0A0A0A"
        app:clt_color2="#E60F09"
        app:clt_color3="#0A0A0A"
        app:clt_txt1="Pregunta: "
        app:clt_txt2="7"
        app:clt_txt3="/10"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.codesgood.views.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#E60F09"
                android:layout_marginVertical="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="Selecciones dos elementos de la monografÃ­a."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="5dp"
                android:text="" />

            <ImageView
                android:layout_width="320dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/evaluacion4_07" />

            <com.codesgood.views.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#750450"
                android:text="Opciones:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <CheckBox
                android:id="@+id/cbxEval4Pre07_op1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El tema." />

            <CheckBox
                android:id="@+id/cbxEval4Pre07_op2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Los lectores." />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El expositor." />


            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginVertical="30dp"
                android:background="@drawable/boton_color_verde"
                android:onClick="Evaluacion4Pregunta07"
                android:text="Siguiente"
                android:textColor="@drawable/boton_menuprin_letras" />

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/boton_color_naranja"
                android:onClick="NoRespondeEvaluacion4Preg07"
                android:text="No responder"
                android:textColor="@drawable/boton_menuprin_letras" />


        </LinearLayout>

    </ScrollView>



</LinearLayout>