<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/evaluacion_fondo"
    android:orientation="vertical"
    tools:context=".Menu_Estudiante.Evaluacion.Evaluacion3.eval_evalua303">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/evaluacion_unidad3"/>

    <TextView
        android:id="@+id/textEval3_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#0A0A0A"
        android:text="Usuario:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <loic.teillard.colortextview.ColorTextView
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clt_color1="#0A0A0A"
        app:clt_color2="#E60F09"
        app:clt_color3="#0A0A0A"
        app:clt_txt1="Pregunta: "
        app:clt_txt2="3"
        app:clt_txt3="/10"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.codesgood.views.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#E60F09"
                android:layout_marginVertical="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="Elegir la opción correcta."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="" />

            <ImageView
                android:id="@+id/Ima_pregunta3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/evaluacion3_03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="" />

            <com.codesgood.views.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#750450"
                android:text="Opciones: león | tigre | perro"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La seña del vídeo representa un"
                    android:textColor="#090808"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEval3Pre03_Ingreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="escriba"
                    android:inputType="textPersonName"
                    android:maxLength="6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColorHint="#1C5CF7"
                    android:textColor="#E60F09"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="#090808"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </LinearLayout>


            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/boton_color_verde"
                android:onClick="Evaluacion3Pregunta03"
                android:text="Siguiente"
                android:textColor="@drawable/boton_menuprin_letras" />

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/boton_color_naranja"
                android:onClick="NoRespondeEvaluacion3Preg03"
                android:text="No responder"
                android:textColor="@drawable/boton_menuprin_letras" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>